<!doctype html>
<html lang="pt_BR">

<head>
  <%= render "head", metadata: site.metadata, title: data.title %>
</head>

<body class="w-screen h-screen font-sans leading-relaxed tracking-wide bg-gray-100 <%= data.layout %> <%= data.page_class %>">
  <%# render Shared::Navbar.new(metadata: site.metadata, resource: resource) %>

  <header class="w-full py-4 text-white bg-blue-600 shadow-lg">
    <div class="container mx-auto text-center">
      <h1 class="text-2xl font-bold">
        <%= data.title %>
      </h1>
      <p class="text-lg">
        <%= data.description %>
      </p>
    </div>
  </header>

  <main>
    <%= yield %>
  </main>

  <%= render "footer", metadata: site.metadata %>
</body>
</html>
